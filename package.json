{
  "name": "valor-boletos",
  "version": "1.0.0",
  "description": "Automação de envio de boletos via WhatsApp",
  "main": "dist/main/main/index.js",
  "scripts": {
    "dev": "npm run build:main && concurrently \"npm run watch:main\" \"npm run dev:renderer\" \"npm run start:electron\"",
    "watch:main": "tsc -p tsconfig.main.json --watch",
    "dev:renderer": "vite",
    "start:electron": "wait-on http://localhost:3000 && cross-env NODE_ENV=development electron .",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:win32": "npm run build && electron-builder --win --ia32",
    "build:win64": "npm run build && electron-builder --win --x64",
    "build:all": "npm run build && electron-builder --win --ia32 --x64",
    "start": "electron .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "lucide-react": "^0.563.0",
    "pino": "^9.14.0",
    "qrcode": "^1.5.4"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.2",
    "@types/node": "^20.11.0",
    "@types/qrcode": "^1.5.5",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
"@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "jsdom": "^28.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vitest": "^4.0.18",
    "wait-on": "^7.2.0"
  }
}
